<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/notification_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  >
  <ImageView 
  		android:id="@+id/image_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2dp" 
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        src="@drawable/ic_file_tx" />
    <RelativeLayout 
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"  
        android:background="@color/whiteColor"
        android:padding="10dp">
        <TextView 
	    	android:id="@+id/title_notification"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/image_notification"
	        style="@style/NotificationTitle" 
	        android:textSize="10dp" 
	       	android:textColor="@color/blackColor"/>
	    <TextView 
	    	android:id="@+id/text_notification"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/image_notification"
	        android:layout_below="@id/title_notification" 
	        android:textSize="10dp" 
	        android:textColor="@color/blackColor"/>  
	    <ProgressBar 
	        android:id = "@+id/progressBarFile"
	        android:layout_width="fill_parent"
	        android:layout_height ="wrap_content"
	        android:layout_margin="5dp"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:layout_below="@id/text_notification" />  
    </RelativeLayout>
  	
</LinearLayout>
